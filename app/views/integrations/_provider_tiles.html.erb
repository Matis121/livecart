<div class="space-y-8">
  <!-- Marketplace -->
  <div>
    <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <%= lucide_icon("shopping-cart", class: "w-5 h-5 text-primary") %>
      Marketplace
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Baselinker -->
      <%= link_to new_integration_path(provider: "baselinker"), class: "card bg-base-100 border-2 border-primary/40 hover:border-primary hover:shadow-lg transition-all duration-200 cursor-pointer group" do %>
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
              <span class="text-2xl font-bold text-primary">BL</span>
            </div>
            <%= lucide_icon("arrow-right", class: "w-5 h-5 text-primary/50 group-hover:text-primary transition-colors") %>
          </div>
          <h3 class="font-semibold text-lg mb-1">Baselinker</h3>
          <p class="text-sm text-base-content/60">Import stanów magazynowych, cen i eksport zamówień</p>
          <div class="mt-3">
            <span class="badge badge-success badge-sm">Dostępne</span>
          </div>
        </div>
      <% end %>
      <!-- Sellasist -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-success/10 flex items-center justify-center transition-colors">
              <span class="text-2xl font-bold text-success">SA</span>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">Sellasist</h3>
          <p class="text-sm text-base-content/60">Import stanów magazynowych, cen i eksport zamówień</p>
        </div>
      </div>
    </div>
  </div>
  <!-- Social Media -->
  <div>
    <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <%= lucide_icon("users", class: "w-5 h-5 text-primary") %>
      Social Media
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- TikTok -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-info/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("music", class: "w-6 h-6 text-info") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">TikTok</h3>
          <p class="text-sm text-base-content/60">Wysyłka linków DM i zamówienia z live'ów</p>
        </div>
      </div>
      <!-- Facebook -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-info/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("message-circle", class: "w-6 h-6 text-info") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">Facebook</h3>
          <p class="text-sm text-base-content/60">Messenger i zamówienia z transmisji</p>
        </div>
      </div>
      <!-- Instagram -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-secondary/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("instagram", class: "w-6 h-6 text-secondary") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">Instagram</h3>
          <p class="text-sm text-base-content/60">Direct messages i zamówienia</p>
        </div>
      </div>
    </div>
  </div>
  <!-- Payments -->
  <div>
    <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <%= lucide_icon("credit-card", class: "w-5 h-5 text-primary") %>
      Płatności
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Stripe -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-accent/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("credit-card", class: "w-6 h-6 text-accent") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">Stripe</h3>
          <p class="text-sm text-base-content/60">Przyjmuj płatności kartą przez Stripe</p>
        </div>
      </div>
      <!-- PayU -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-success/10 flex items-center justify-center transition-colors">
              <span class="text-xl font-bold text-success">PayU</span>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">PayU</h3>
          <p class="text-sm text-base-content/60">Bramka płatności PayU dla Polski</p>
        </div>
      </div>
      <!-- Przelewy24 -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-error/10 flex items-center justify-center transition-colors">
              <span class="text-xl font-bold text-error">P24</span>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">Przelewy24</h3>
          <p class="text-sm text-base-content/60">Szybkie przelewy online</p>
        </div>
      </div>
    </div>
  </div>
  <!-- Shipping -->
  <div>
    <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <%= lucide_icon("truck", class: "w-5 h-5 text-primary") %>
      Przesyłki
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- InPost -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-warning/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("package", class: "w-6 h-6 text-warning") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">InPost</h3>
          <p class="text-sm text-base-content/60">Paczkomaty i etykiety InPost</p>
        </div>
      </div>
      <!-- DHL -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-error/10 flex items-center justify-center transition-colors">
              <span class="text-xl font-bold text-error">DHL</span>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">DHL</h3>
          <p class="text-sm text-base-content/60">Przesyłki kurierskie DHL</p>
        </div>
      </div>
      <!-- DPD -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-error/10 flex items-center justify-center transition-colors">
              <span class="text-xl font-bold text-error">DPD</span>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">DPD</h3>
          <p class="text-sm text-base-content/60">Przesyłki kurierskie DPD</p>
        </div>
      </div>
    </div>
  </div>
  <!-- Invoicing -->
  <div>
    <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <%= lucide_icon("file-text", class: "w-5 h-5 text-primary") %>
      Faktury
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Fakturownia -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-info/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("receipt", class: "w-6 h-6 text-info") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">Fakturownia</h3>
          <p class="text-sm text-base-content/60">Automatyczne wystawianie faktur</p>
        </div>
      </div>
      <!-- Wfirma -->
      <div class="card bg-base-100 border-2 border-base-300 transition-all duration-200 opacity-60">
        <div class="card-body">
          <div class="flex items-start justify-between mb-3">
            <div class="w-12 h-12 rounded-lg bg-success/10 flex items-center justify-center transition-colors">
              <%= lucide_icon("file-check", class: "w-6 h-6 text-success") %>
            </div>
            <span class="badge badge-sm badge-ghost">Wkrótce</span>
          </div>
          <h3 class="font-semibold text-lg mb-1">wFirma</h3>
          <p class="text-sm text-base-content/60">System faktur i księgowości</p>
        </div>
      </div>
    </div>
  </div>
</div>
