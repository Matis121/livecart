<%= turbo_frame_tag "edit_customer" do %>
  <div class="mt-4 pt-4 border-t">
    <h3 class="font-semibold mb-3">Wybierz klienta</h3>
    
    <%= form_with model: @order, url: order_path(@order), method: :patch, class: "space-y-3" do |f| %>
      <div class="form-control">
        <%= f.select :customer_id, 
            options_from_collection_for_select(@customers, :id, :name, @order.customer_id),
            { prompt: "Wybierz klienta..." },
            class: "select select-bordered w-full" %>
      </div>
      
      <div class="flex flex-col sm:flex-row justify-end gap-2">
        <%= link_to "Anuluj", order_path(@order), 
            data: { turbo_frame: "_top" }, 
            class: "btn btn-ghost btn-sm w-full sm:w-auto" %>
        <%= f.submit "Przypisz klienta", class: "btn btn-primary btn-sm w-full sm:w-auto" %>
      </div>
    <% end %>
  </div>
<% end %>
