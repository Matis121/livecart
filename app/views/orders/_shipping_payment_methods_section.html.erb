<turbo-frame id="shipping_payment_methods_section">
  <div class="flex justify-between items-start mb-3">
    <h3 class="font-semibold text-base">Wysyłka i płatność</h3>
    <%= link_to edit_shipping_payment_methods_order_path(order), 
        class: "btn btn-ghost btn-sm btn-square" do %>
      <%= lucide_icon "pencil", class: "w-4 h-4" %>
    <% end %>
  </div>
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <span class="text-sm text-base-content/60">Sposób płatności</span>
      <span class="font-medium text-sm"><%= order.payment_method.presence || "—" %></span>
    </div>
    <div class="flex justify-between items-center">
      <span class="text-sm text-base-content/60">Sposób wysyłki</span>
      <span class="font-medium text-sm"><%= order.shipping_method.presence || "—" %></span>
    </div>
    <div class="flex justify-between items-center">
      <span class="text-sm text-base-content/60">Koszt wysyłki</span>
      <span class="font-medium text-sm"><%= number_to_currency(order.shipping_cost, unit: order.currency, format: "%n %u") %></span>
    </div>
  </div>
</turbo-frame>
