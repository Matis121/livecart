<div class="container mx-auto px-4 py-6 max-w-6xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="text-sm mb-2">
      <%= link_to "← Zamówienia", orders_path, class: "link" %>
    </div>
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
      <div class="flex flex-wrap items-center gap-3">
        <h1 class="text-xl sm:text-2xl font-bold"><%= @order.order_number %></h1>
        <%= render "orders/status_dropdown", order: @order %>
        <!-- Przycisk dla historii -->
        <%= link_to status_history_order_path(@order), 
            data: { turbo_frame: "status_history_modal" },
            class: "btn btn-sm btn-ghost" do %>
          <%= lucide_icon('history', class: 'w-4 h-4') %>
          Historia
        <% end %>
      </div>
      <%= button_to "Usuń", order_path(@order), method: :delete, class: "btn btn-sm btn-ghost text-error w-full sm:w-auto", data: { turbo_confirm: "Na pewno usunąć to zamówienie?" } %>
    </div>
    <div class="text-xs text-base-content/50 mt-3 flex flex-col sm:flex-row sm:gap-2 gap-1">
      <span class="hidden sm:inline">·</span>
      <span>Utworzono: <%= @order.created_at.strftime("%d.%m.%Y %H:%M") %></span>
      <span class="hidden sm:inline">·</span>
      <span>Aktualizacja: <%= @order.updated_at.strftime("%d.%m.%Y %H:%M") %></span>
    </div>
  </div>

  <!-- Koszyk -->
  <div class="mb-6">
    <%= render "orders/order_checkout", order: @order %>
  </div>


  <!-- Układ dwukolumnowy -->
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-4 sm:gap-6">
    <!-- Lewa kolumna (2/3 szerokości) -->
    <div class="xl:col-span-2 space-y-4 sm:space-y-6">
      <!-- Produkty -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold">Produkty</h2>
            <%= link_to new_order_order_item_path(@order), 
                data: { turbo_frame: "new_order_item" },
                class: "btn btn-sm" do %>
              Dodaj produkt
            <% end %>
          </div>
          <%= turbo_frame_tag "new_order_item" %>
          <%= render "order_items/list", order: @order %>
        </div>
      </div>

      <!-- Adresy -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <h2 class="text-lg font-semibold mb-4">Adresy</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Adres dostawy -->
            <%= render "orders/shipping_address_section",
                order: @order,
                shipping_address: @order.shipping_address %>

            <!-- Adres faktury -->
            <%= render "orders/billing_address_section",
                order: @order,
                billing_address: @order.billing_address %>
          </div>
        </div>
      </div>
    </div>

    <!-- Prawa kolumna (1/3 szerokości) -->
    <div class="xl:col-span-1 space-y-4 sm:space-y-6">
      <!-- Klient -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <%= render "orders/customer_section", order: @order %>
        </div>
        <%= render "orders/contact_info_section", order: @order %>
      </div>

      <!-- Płatność -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <%= render "orders/payment_section", order: @order %>
        </div>
      </div>

      <!-- Wysyłka i płatność -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <%= render "orders/shipping_payment_methods_section", order: @order %>
        </div>
      </div>
    </div>
  </div>

  <!-- Comment -->
  <% if @order.comment.present? %>
    <div class="card bg-base-100 shadow-sm mt-6">
      <div class="card-body">
        <h3 class="font-semibold mb-3">Komentarz</h3>
        <p class="text-sm whitespace-pre-wrap"><%= @order.comment %></p>
      </div>
    </div>
  <% end %>

  <!-- Modals -->
  <%= turbo_frame_tag "shipping_address_modal", target: "_top" %>
  <%= turbo_frame_tag "billing_address_modal", target: "_top" %>
  <%= turbo_frame_tag "status_history_modal", target: "_top" %>
</div>
