<%= turbo_frame_tag "shipping_payment_methods_section" do %>
  <div>
    <h3 class="font-semibold text-base mb-4">Edytuj wysyłkę i płatność</h3>
    
    <%= form_with model: @order, url: update_shipping_payment_methods_order_path(@order), method: :patch, data: { turbo_frame: "shipping_payment_methods_section" } do |f| %>
      <div class="space-y-4">
        <!-- Sposób płatności -->
        <div class="form-control">
          <%= f.label :payment_method, "Sposób płatności", class: "label" %>
          <%= f.text_field :payment_method, class: "input input-bordered w-full", placeholder: "np. Przelew, Gotówka, Karta" %>
        </div>

        <!-- Sposób wysyłki -->
        <div class="form-control">
          <%= f.label :shipping_method, "Sposób wysyłki", class: "label" %>
          <%= f.text_field :shipping_method, class: "input input-bordered w-full", placeholder: "np. Kurier, InPost, Odbiór osobisty" %>
        </div>

        <!-- Koszt wysyłki -->
        <div class="form-control">
          <%= f.label :shipping_cost, "Koszt wysyłki", class: "label" %>
          <div class="join">
            <%= f.number_field :shipping_cost, step: 0.01, class: "input input-bordered join-item flex-1", placeholder: "0.00" %>
            <span class="btn btn-ghost join-item no-animation"><%= @order.currency %></span>
          </div>
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-2 justify-end">
          <%= link_to "Anuluj", order_path(@order), 
              class: "btn btn-ghost w-full sm:w-auto" %>
          <%= f.submit "Zapisz", class: "btn btn-primary w-full sm:w-auto" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
