<%= turbo_frame_tag "discount_code_section" do %>
  <h3 class="font-semibold text-base mb-4">Edytuj kod rabatowy</h3>
  <%= form_with model: @order, url: update_discount_code_order_path(@order), method: :patch, data: { turbo_frame: "discount_code_section" } do |f| %>
    <div class="space-y-4">
      <div class="form-control">
        <%= f.label :discount_code, "Kod rabatowy", class: "label" %>
        <%= f.text_field :discount_code, value: @order.discount_code&.code, class: "input input-bordered w-full", placeholder: "np. DISCOUNT10" %>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 justify-end">
        <%= link_to "Anuluj", order_path(@order), 
            class: "btn btn-ghost w-full sm:w-auto" %>
        <%= f.submit "Zastosuj", class: "btn btn-primary w-full sm:w-auto" %>
      </div>
    </div>
  <% end %>
<% end %>