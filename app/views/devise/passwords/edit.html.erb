<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="card bg-base-100 shadow-xl w-full max-w-md">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold justify-center mb-6">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control w-full mb-4">
          <%= f.label :password, "New password", class: "label" do %>
            <span class="label-text">
              New password
              <% if @minimum_password_length %>
                <span class="text-xs text-base-content/60">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            </span>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Enter new password" %>
        </div>

        <div class="form-control w-full mb-4">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm new password</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "Confirm new password" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Change my password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
