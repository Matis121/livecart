<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold">Produkty</h1>
  <%= link_to "Nowy produkt", new_product_path, class: "btn btn-primary" %>
</div>
<div class="container mx-auto px-4 py-8">
  <div class="overflow-x-auto">
    <table class="table table-zebra">
      <thead>
        <tr>
          <th>Zdjęcie</th>
          <th>Nazwa</th>
          <th>SKU</th>
          <th>EAN</th>
          <th>Cena brutto</th>
          <th>VAT</th>
          <th>Ilość</th>
          <th>Akcje</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <% if product.images.attached? %>
                <%= image_tag product.images.first, class: "w-14 h-14 object-cover rounded" %>
              <% else %>
                <span class="text-gray-400"><%= lucide_icon('image', class: 'w-14 h-14') %></span>
              <% end %>
            </td>
            <td><%= product.name %></td>
            <td><%= product.sku %></td>
            <td><%= product.ean %></td>
            <td><%= number_to_currency(product.gross_price, unit: product.currency, format: "%n %u") %></td>
            <td><%= product.tax_rate %>%</td>
            <td><%= product.quantity %></td>
            <td class="flex gap-2">
              <%= link_to "Edytuj", edit_product_path(product), class: "btn btn-sm btn-primary" %>
              <%= button_to "Usuń", product_path(product), method: :delete, class: "btn btn-sm btn-error", data: { turbo_confirm: "Na pewno usunąć?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>