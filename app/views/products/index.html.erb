<div class="container mx-auto px-4 py-6 sm:py-8 max-w-7xl">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold">Produkty</h1>
    <%= link_to "Nowy produkt", new_product_path, class: "btn btn-primary w-full sm:w-auto" %>
  </div>
  <% if @all_products.any? %>
    <div class="flex-1 min-w-0" data-controller="checkbox-select-all">
      <%= render "products/products_toolbar" %>
      <%= render "products/products_table" %>
    </div>
  <% else %>
    <%= render "products/empty_state" %>
  <% end %>
</div>
<!-- Modale dla wszystkich produktÃ³w -->
<% @products.each do |product| %>
  <%= render "products/stock_history_modal", product: product %>
<% end %>
