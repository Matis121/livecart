<div class="flex items-center gap-2">
  <!-- Przycisk exportu -->
  <div class="dropdown">
    <div tabindex="0" role="button" class="btn btn-sm bg-base-100">
      <span class="text-sm font-normal">Pobierz</span>
      <%= lucide_icon('chevron-down', class: 'w-3 h-3') %>
    </div>
    <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-lg z-[1] w-32 p-1 shadow-lg border border-base-200">
      <li>
        <button type="submit"
                form="bulk_action_form"
                formmethod="post"
                formaction="<%= bulk_action_products_path(action_type: 'export') %>"
                class="text-sm">
          Produkty [CSV]
        </button>
      </li>
    </ul>
  </div>
</div>
