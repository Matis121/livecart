<div class="text-center py-12">
  <div class="flex flex-col items-center gap-4">
    <%= lucide_icon("package", class: "w-16 h-16 opacity-30") %>
    <div>
      <h3 class="text-lg font-semibold mb-1">Brak produktów</h3>
      <p class="text-sm opacity-60 mb-6">Dodaj swój pierwszy produkt, aby rozpocząć sprzedaż</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <div class="flex flex-col items-center gap-2">
          <%= link_to new_product_path, class: "btn btn-primary" do %>
            <%= lucide_icon("plus", class: "w-4 h-4 inline-block mr-1") %>
            Dodaj ręcznie
          <% end %>
        </div>
        <div class="flex items-center opacity-30">
          <span class="text-sm">lub</span>
        </div>
        <div class="flex flex-col items-center gap-2">
          <%= link_to import_form_products_path, class: "btn btn-primary" do %>
            <%= lucide_icon("upload", class: "w-4 h-4 inline-block mr-1") %>
            Zaimportuj z pliku
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>