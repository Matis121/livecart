<div class="bg-base-100 rounded-lg shadow-sm">
  <table class="table">
    <thead>
      <tr>
        <th class="font-semibold">Kod</th>
        <th class="font-semibold">Typ</th>
        <th class="font-semibold">Wartość</th>
        <th class="font-semibold">Min. zamówienie</th>
        <th class="font-semibold">Użycia</th>
        <th class="font-semibold">Status</th>
        <th class="font-semibold">Ważny od / do</th>
        <th class="text-end font-semibold w-24">Akcje</th>
      </tr>
    </thead>
    <tbody>
      <% @discount_codes.each do |discount_code| %>
        <tr class="hover">
          <td>
            <span class="font-mono font-medium"><%= discount_code.code %></span>
          </td>
          <td>
            <span class="badge badge-ghost badge-sm">
              <%= discount_code.kind_name %>
            </span>
          </td>
          <td>
            <div class="flex flex-col gap-2">
              <%= discount_code.percentage? ? "#{discount_code.value}%" : number_to_currency(discount_code.value, unit: "zł", format: "%n %u") %>
              <%= discount_code.free_shipping? ? "<span class='badge badge-sm badge-success'>Darmowa dostawa</span>".html_safe : "" %>
            </div>
          </td>
          <td>
            <%= discount_code.minimum_order_amount.present? ? number_to_currency(discount_code.minimum_order_amount, unit: "zł", format: "%n %u") : "—" %>
          </td>
          <td>
            <% if discount_code.usage_limit.present? %>
              <%= discount_code.used_count %> / <%= discount_code.usage_limit %>
            <% else %>
              <%= discount_code.used_count %>
            <% end %>
          </td>
          <td>
            <% if discount_code.active? %>
              <span class="badge badge-sm badge-success">Aktywny</span>
            <% else %>
              <span class="badge badge-sm badge-ghost">Nieaktywny</span>
            <% end %>
          </td>
          <td>
            <%= discount_code.valid_from.present? ? discount_code.valid_from.strftime("%d.%m.%Y") : "—" %> / <%= discount_code.valid_until.present? ? discount_code.valid_until.strftime("%d.%m.%Y") : "—" %>
          </td>
          <td class="text-end">
            <div class="dropdown dropdown-end">
              <div tabindex="0" role="button" class="btn btn-sm btn-ghost">
                <%= lucide_icon("more-vertical", class: "w-4 h-4") %>
              </div>
              <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li>
                  <%= link_to settings_discount_path(discount_code), data: { turbo_method: :patch, turbo_confirm: "Na pewno zaktualizować status kodu rabatowego?" } do %>
                    <%= lucide_icon(discount_code.active? ? "x-circle" : "check-circle", class: "w-4 h-4") %>
                    <%= discount_code.active? ? "Deaktywuj" : "Aktywuj" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to settings_discount_path(discount_code), data: { turbo_method: :delete, turbo_confirm: "Na pewno usunąć ten kod rabatowy?" }, class: "text-error" do %>
                    <%= lucide_icon("trash-2", class: "w-4 h-4") %>
                    Usuń
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="flex items-center justify-end gap-4 px-4 py-3 border-t border-base-200">
    <div class="flex items-center gap-2">
      <select
            onchange="window.location.href = this.value"
            class="select select-sm select-bordered bg-base-100 min-h-0 h-8 pr-8"
          >
        <% @per_page_options.each do |option| %>
          <option
                value="<%= settings_discounts_path(request.params.merge(per_page: option, page: 1)) %>"
                <%= 'selected' if @pagy.limit == option %>
              >
            <%= option %>
          </option>
        <% end %>
      </select>
    </div>
    <div class="flex items-center gap-1">
      <% if @pagy.page > 1 %>
        <%= link_to settings_discounts_path(request.params.merge(page: @pagy.page - 1)), class: "p-1 rounded hover:bg-base-200 transition-colors" do %>
          <%= lucide_icon('chevron-left', class: 'w-4 h-4') %>
        <% end %>
      <% else %>
        <span class="p-1 opacity-30"><%= lucide_icon('chevron-left', class: 'w-4 h-4') %></span>
      <% end %>
      <span class="px-2 tabular-nums"><%= @pagy.page %> / <%= @pagy.pages %></span>
      <% if @pagy.page < @pagy.pages %>
        <%= link_to settings_discounts_path(request.params.merge(page: @pagy.page + 1)), class: "p-1 rounded hover:bg-base-200 transition-colors" do %>
          <%= lucide_icon('chevron-right', class: 'w-4 h-4') %>
        <% end %>
      <% else %>
        <span class="p-1 opacity-30"><%= lucide_icon('chevron-right', class: 'w-4 h-4') %></span>
      <% end %>
    </div>
  </div>
</div>