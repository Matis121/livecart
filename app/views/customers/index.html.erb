<div class="container mx-auto px-4 py-6 sm:py-8 max-w-7xl">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold">Klienci</h1>
    <%= link_to "Nowy klient", new_customer_path, class: "btn btn-primary w-full sm:w-auto", data: { turbo_frame: "customer_modal" } %>
  </div>
  <% if @customers.any? %>
    <%= render "customers/table" %>
  <% else %>
    <%= render "customers/empty_state" %>
  <% end %>
</div>
<%= turbo_frame_tag "customer_modal" %>