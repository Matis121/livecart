<div class="min-h-screen container mx-auto px-4 py-8 max-w-6xl flex flex-col items-center justify-center">
  <% if @checkout.completed? %>
    <!-- Strona sukcesu -->
    <div class="max-w-2xl mx-auto py-16">
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-16 h-16 mb-6">
          <%= lucide_icon "check", class: "w-16 h-16 text-base-content/40 stroke-[1.5]" %>
        </div>
        <% if @checkout.open_package? %>
          <h1 class="text-3xl mb-2 tracking-tight">Paczka zamknięta</h1>
          <p class="text-base-content/50">Twoja paczka została zamknięta. Zamówienie przeszło do realizacji.</p>
        <% else %>
          <h1 class="text-3xl mb-2 tracking-tight">Zamówienie złożone</h1>
          <p class="text-base-content/50">Dziękujemy za zakup</p>
        <% end %>
      </div>
      <div class="text-center">
        <p class="text-sm text-base-content/40">
          Potwierdzenie wysłano na <span class="text-base-content/60"><%= @order.email %></span>
        </p>
      </div>
    </div>

  <% elsif @checkout.open_package_pending? %>
    <!-- Strona zamknięcia paczki -->
    <%= render partial: "checkouts/close_package", locals: { checkout: @checkout, order: @order } %>

  <% else %>
    <!-- Formularz checkout -->
    <%= render partial: "checkouts/checkout_form", locals: { checkout: @checkout, order: @order, account_logo: @account_logo, account_name: @account_name, shipping_methods: @shipping_methods, payment_methods: @payment_methods, open_package_enabled: @open_package_enabled } %>
  <% end %>
</div>